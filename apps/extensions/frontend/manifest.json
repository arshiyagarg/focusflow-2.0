{
  "manifest_version": 3,
  "name": "FocusFlow",
  "version": "1.0.0",
  "description": "ADHD-friendly reading, explanations, and Meet assistance.",
  "permissions": ["storage", "activeTab", "tabCapture",
    "offscreen"],
  "host_permissions": ["https://focusflow-extension.onrender.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": { "default_popup": "popup/popup.html" },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "exclude_matches": ["*://meet.google.com/*"], 
      "js": ["content/reading.js"],
      "css": ["style.css"]
    },
    {
      "matches": ["*://meet.google.com/*", "*://www.youtube.com/*", "*://*.spotify.com/*"],
      "js": ["libs/mermaid.min.js","content/meet.js", "content/vision.js"],
      "css": ["style.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["libs/mermaid.min.js","offscreen.html"],
      "matches": ["<all_urls>"]
    }
  ]
}